# Uncomment the next line to define a global platform for your project

platform :ios, '9.0'
use_frameworks!

abstract_target 'CommonPods' do
    
    pod 'Moya'          # 网络封装层库
    pod 'SwiftyJSON'    # JSON 解析库
    pod 'HandyJSON'    # json/字典 映射 模型
    pod 'Toast-Swift'  #吐司提示
    
    
    pod 'Spring' # 动画库
    pod 'PullToRefreshKit' # 下拉刷新
    pod 'XLPagerTabStrip' # 顶部tab标签切换库
    pod 'IQKeyboardManagerSwift' # 键盘管理者
    
    pod 'RxSwift' # 函数响应式编程库
    pod 'RxCocoa'
    
    pod 'SnapKit' # autoLayout布局库
    pod 'HGPlaceholders' # tableView 占位视图
    pod 'SKPhotoBrowser' # 图片浏览器
    
    pod 'GTSDK', '2.2.0.0-noidfa' # 推送
    pod 'FSPagerView' # 轮播
    pod 'Default' # 持久化存储
    pod 'JGProgressHUD' # 加载进度条
    pod 'Kingfisher' # 图片缓存
    
    
    target 'Yihaodar' do
    end
    target 'YihaodarDev' do
    end
    
end


